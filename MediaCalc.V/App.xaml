            <Setter Property="FontStretch" Value="ExtraExpanded"/>
            <Setter Property="FontFamily" Value="Jura"/>
        </Style>

        <Style x:Key="TabItemMainStyle" TargetType="{x:Type TabItem}">
            <Setter Property="Width" Value="300"/>
