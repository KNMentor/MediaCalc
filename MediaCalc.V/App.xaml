        </Style>

        <Style x:Key="TabControlSideStyle" TargetType="{x:Type TabControl}">
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style x:Key="TabItemSideStyle" TargetType="{x:Type TabItem}">
            <Setter Property="MinWidth" Value="220"/>
        </Style>

        <Style x:Key="DataGridMainStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Jura"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Jura"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="{x:Type DatePicker}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Jura"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Jura"/>
            <Setter Property="Height" Value="32"/>
        </Style>


        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Jura"/>
            <Setter Property="Height" Value="32"/>
        </Style>


    </Application.Resources>
</Application>
